<div id="visit-profile-wrapper">
    <div id="view-profile-top-wrapper">
        <div id="profile-div-left" class="profile-divs">
            <div id="view-profile-bio">
                <img id="profile-img" class="circle-img-150" src="{{profile.imgurl}}" alt="{{profile.firstName}}"/>
                <h3 id="profile-name">{{profile.fname}} {{profile.lname}}</h3>
                <p>{{profile.about}}</p>
                <p>{{profile.countryname}}</p>
            </div>
        </div>

        <div id="profile-div-right" class="profile-divs align-bottom">
            <div>
                <a href="/messageUser">
                    <button class="blue-btn">Message</button>
                </a>
            </div>
            <div>
                <a>Likes</a>
                {{!-- HREF MUST BE EDITED HERE, CURRENTLY USING USERID NOT VISITING PROFILE ID --}}
                <a href='/profile/like/{{profile.userid}}' formmethod="GET"><button>+</button></a>
            </div>
            <div>
                <a>Posts</a>
            </div>
        </div>
    </div>

        <div class="profile-posts profile-wrapper-posts">
            <div class="profile-inner-wrapper">
                <p>All posts by {{profile.fname}}:</p>
            </div>
            <div id="post-partial-div" >
                {{>posts postList = userPostList}}  
            </div>      
        </div>
</div>